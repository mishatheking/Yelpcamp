<% layout("./layout/boilerplate.ejs") %>

<div class="container d-flex justify-content-center align-items-center mt-3">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="https://images.unsplash.com/photo-1559521783-1d1599583485?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80"
                    alt="" class="card-img-top" />
        <div class="card-body">
          <h5 class="card-title">Register</h5>
          <form class="needs-validation"  novalidate action="/register" method="post" >
            <!-- <form action="/register" method="POST" class="validated-form" novalidate> -->
        
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" name="username" id="title" placeholder="Enter username" autofocus required>
                    <div class="INvalid-feedback">
                      Enter valid username!
                    </div>
                </div>
        
                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="eamil" class="form-control" name="email" id="email" placeholder="Enter email"   required/>  
                    <div class="INvalid-feedback">
                      Enter valid email!
                    </div>
                </div>
                
                 <div class="form-group mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter strong password" required/>  
                    <div class="INvalid-feedback">
                      Enter valid password!
                    </div>
                 </div>
        
                <button type="submit" class="btn btn-block btn-primary"> Register</button>
          </form>    
          <a class="btn btn-primary mb-2" href="/login">Log in</a>
          <a class="btn btn-primary mb-2" href="/campgrounds">All campgrounds</a>
          <a class="btn btn-primary mb-2" href="/campgrounds">Back</a>
          
        </div>
      </div>
    </div>
  </div>
</div>


