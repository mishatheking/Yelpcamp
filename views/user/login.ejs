<% layout("./layout/boilerplate.ejs") %>


<div class="container d-flex justify-content-center align-items-center mt-3">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="https://images.unsplash.com/photo-1559521783-1d1599583485?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80"
                    alt="" class="card-img-top" />
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <form class="needs-validation"  novalidate action="/login" method="post" >
            <div class="form-group mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" id="title" placeholder="Enter username" autofocus required>
                <div class="INvalid-feedback">
                    Enter a valid username!
                </div>
            </div>
            
             <div class="form-group mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Enter password" required/>  
                <div class="INvalid-feedback">
                    Enter a valid password!
                </div>
             </div>
    
            <button type="submit" class="btn btn-block btn-primary"> Login</button>
          </form>  
           
          <a class="btn btn-primary mb-2" href="/register">Sign up</a>
          <a class="btn btn-primary mb-2" href="/campgrounds">All campgrounds</a>
          <a class="btn btn-primary mb-2" href="/campgrounds">Back</a>
        </div>
      </div>
    </div>
  </div>
</div>



